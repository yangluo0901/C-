@model AccountModel
<div class="container">
    <div class="row">
        <h1 class="col-sm-3 text-left">Welcome  @Model.user.first_name</h1>
        <p class="col-sm-3 align-bottom">Current balance :  @Model.user.balance</p>
        <a class="col-sm-3" href="/logout"><button class="btn btn-warning">logout</button></a>
    </div>
    <div class="row">
        <form class="form-inline" action="/account/action" method="post">
            <div class="form-group">
                <label asp-for="@Model.action.amount">   Deposit/Withdraw :</label>
                <input class="form-contorl" type="number" asp-for="@Model.action.amount">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Submit">
            </div>
        </form>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var action in @Model.user.actions)
            {
                <tr>
                    <td>@action.amount</td>
                    <td>@action.created_at</td>
                </tr>
            }
        </tbody>
    </table>
</div>

