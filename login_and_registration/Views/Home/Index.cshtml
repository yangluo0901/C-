<!DOCTYPE html>
@model User
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Login & Registration</title>
  </head>
  <body>
    <br>
    <br>
    @if(@ViewBag.message != null)
    {
      <p>@ViewBag.message</p>
    }
    <form class="form-horizontal" asp-action="Register" asp-controller="Home" method="post">
      <div class="form-group">
        <label class="contorl-label col-sm-2" asp-for="@Model.first_name"></label>
        <div class="col-sm-10">
          <input type="text" asp-for="@Model.first_name">
        </div>
      </div>

      <div class="form-group">
        <label class="contorl-label col-sm-2" asp-for="@Model.last_name"></label>
        <div class="col-sm-10">
          <input type="text" asp-for="@Model.last_name">
        </div>
      </div>

      <div class="form-group">
        <label class="contorl-label col-sm-2" asp-for="@Model.email"></label>
        <div class="col-sm-10">
          <input type="text" asp-for="@Model.email">
        </div>
      </div>

      <div class="form-group">
        <label class="contorl-label col-sm-2" asp-for="@Model.password"></label>
        <div class="col-sm-10">
          <input type="text" asp-for="@Model.password">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-3 col-sm-offset-4">
          <input type="submit" name="submit" value="Submit">
        </div>
      </div>
    </form>
    <div class="row">
      <form class="form-horizontal" asp-action="Login" asp-controller="Home" method="post">
        <div class="form-group">
          <label class="contorl-label col-sm-2" asp-for="@Model.email"></label>
          <div class="col-sm-10">
            <input type="text" asp-for="@Model.email">
          </div>
        </div>
        <div class="form-group">
          <label class="contorl-label col-sm-2" asp-for="@Model.password"></label>
          <div class="col-sm-10">
            <input type="text" asp-for="@Model.password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-3 col-sm-offset-4">
            <input type="submit" name="submit" value="Login">
          </div>
        </div>
      </form>
    </div>

  </body>
</html>
