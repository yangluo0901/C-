@model LoginUser
<div class="container">
    <form class="form-horizontal" action="/login" method="post">
      <div class="form-group">
        <span asp-validation-for="@Model.loginemail"></span>
        <label class="col-sm-2 control-label" for="loginemail">E-mail</label>
        <div class="col-sm-5">
          <input type="text" name="loginemail" >
        </div>
      </div>
      <div class="form-group">
        <span asp-validation-for="@Model.loginpassword"></span>
        
        <label class="col-sm-2 control-label" for="loginpassword">Password</label>
        <div class="col-sm-5">
          <input type="text" name="loginpassword" >
        </div>
      </div>
      <div class="form-group">
        <input type="submit"  class="btn btn-success" value="Login">
      </div>
  </form>
  @ViewBag.errormessage
</div>