@model UpdateNote
<div class="container">
  <form class="form-horizontal" action="/updatenote" method="post">
    <div class="form-group">
      <label for="title" class="col-sm-2 control-label">Note</label>
      <div class="col-sm-5">
        <input type="text" name="title" placeholder="title">
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-5">
        <textarea name="description" rows="8" cols="80">description</textarea>
      </div>
    </div>
    <div class="form-group col-sm-2 col-sm-offset-4">
      <div class="col-sm-2 col-sm-offset-4">
        <input type="submit" class="btn btn-success " name="submit" value="Update">
      </div>
    </div>
  </form>

</div>
